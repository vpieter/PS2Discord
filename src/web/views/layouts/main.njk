{% import '../macros/styles.njk' as styles %}

<!doctype html>
<html>
<head>
  {% block head %}
  <meta charset="utf-8" />
  <meta name="viewport" content="initial-scale=1" />
  <title>{% block title %}{% block pageTitle %}{{ title | capitalize }}{% endblock pageTitle %} - BJayBot{% endblock title %}</title>
  {% block styles %}
  <style>
    {{ styles.reset() }}
  </style>
  <style>
    :root {
      --rgb-blue-dark: 40, 44, 52;
      --rgb-white: 238, 238, 238;
      --rgb-yellow: 240, 218, 94;
      --rgb-yellow-light: 236, 240, 128;
      --rgb-green: 166, 228, 80;
      --rgb-green-dark: 103, 148, 48;
      --rgb-cyan: 118, 233, 195;
      --rgb-orange: 243, 159, 86;
      --rgb-red: 243, 86, 86;
      --rgb-grey: 94, 106, 117;
    }

    :root {
      background: rgb(var(--rgb-blue-dark));
      color: rgb(var(--rgb-white));
      display: block;
      font-family: 'helvetica neue', helvetica, arial, sans-serif;
      line-height: 1.5;
      margin: 0 auto;
      max-width: 960px;
      padding: 0 8px 16px;
      text-shadow: 0 1px 0 black;

      -moz-user-select: none;
      -webkit-user-select: none;
      user-select: none;
      cursor: default;
    }
    
    ::selection {
      background-color: rgba(var(--rgb-white), .2);
    }

    * {
      box-sizing: border-box;
    }

    header {
      display: flex;
      align-items: baseline;
      justify-content: center;
      flex-wrap: wrap;
      cursor: default;
      margin: 32px 0 24px;

      -moz-user-select: none;
      -webkit-user-select: none;
      user-select: none;
    }
    header h1 {
      color: rgb(var(--rgb-yellow));
      font-size: 32px;
      margin-bottom: 8px;
    }
    header h2 {
      font-size: 24px;
    }
    header h1, header h2 {
      display: inline-block;
      font-family: 'comic sans ms', 'comic sans', /* fuck it, meme font ded */ 'helvetica neue', helvetica, arial, sans-serif;
      font-weight: bold;
      text-transform: none;
    }
    header h2::before {
      content: 'Â ';
    }

    nav {
      display: flex;
      justify-content: center;
      margin-bottom: 24px;

      -moz-user-select: none;
      -webkit-user-select: none;
      user-select: none;
    }
    nav a {
      color: rgb(var(--rgb-yellow));
      padding: 0 8px;
      text-decoration: none;
      transition: color .1s ease-out;
    }
    nav a:not(.active):hover {
      color: rgb(var(--rgb-orange));
      text-decoration: underline;
    }
    nav a.active {
      color: rgb(var(--rgb-orange));
      cursor: default;
    }
  </style>
  {% endblock styles %}
  {% block scriptsHead %}{% endblock scriptsHead %}
  {% endblock head %}
</head>
<body>
{% block body %}
<header>
  <h1>BJayBot</h1>
  <h2>beep booping your mom</h2>
</header>
<nav>
  {% set nav_items = { 'index': '/', 'activity': '/activity/' } %}
  {% for nav_item, url in nav_items %}
    <a {% if nav_item != title %}href="{{ url }}"{% endif %} class="{% if nav_item == title %}active{% endif %}">{{ nav_item | capitalize }}</a>
  {% endfor %}
</nav>
{% endblock body %}
{% block scripts %}{% endblock scripts %}
</body>
</html>
